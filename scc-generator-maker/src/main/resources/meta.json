{
  "name": "acm-template-pro",
  "description": "ACM 示例模板生成器",
  "basePackage": "com.scc",
  "version": "1.0-SNAPSHOT",
  "author": "scc",
  "createTime": "2024-12-05",
  "fileConfig": {
    "sourceRootPath" : "D:/projects/web/scc-generator/scc-generator-demo-projects/acm-template-pro",
    "inputRootPath": ".source/acm-template-pro",
    "outputRootPath": "generated",
    "type": "dir",
    "files": [
      {
        "inputPath": "src/main/java/com/scc/acm/MainTemplate.java.ftl",
        "outputPath": "src/main/java/com/scc/acm/MainTemplate.java",
        "type": "file",
        "generateType": "dynamic"
      },
      {
        "inputPath": ".gitignore",
        "outputPath": ".gitignore",
        "type": "file",
        "generateType": "static",
        "condition" : "needGit"
      },
      {
        "inputPath": "README.md",
        "outputPath": "README.md",
        "type": "file",
        "generateType": "static"
      }
    ]
  },
  "modelConfig": {
    "models": [
      {
        "fieldName": "loop",
        "type": "boolean",
        "description": "是否生成循环",
        "defaultValue": false,
        "abbr": "l"
      },
      {
        "fieldName": "author",
        "type": "String",
        "description": "作者注释",
        "defaultValue": "scc",
        "abbr": "a"
      },
      {
        "fieldName": "outputText",
        "type": "String",
        "description": "输出信息",
        "defaultValue": "sum = ",
        "abbr": "o"
      },
      {
        "fieldName" : "needGit",
        "type" : "boolean",
        "description" : "是否生成gitignore",
        "defaultValue" : true
      }
    ]
  }
}
